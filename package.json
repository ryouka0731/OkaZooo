{
    "name": "example",
    "author": {
        "name": "Ra1NuX",
        "email": "ra1nux.01@gmail.com"
    },
    "version": "0.0.0",
    "main": "electron/electron.ts",
    "scripts": {
        "dev": "concurrently \"vite\" \"bun ./esbuild.config.mjs --watch\"",
        "build:electron": "bun ./esbuild.config.mjs",
        "build:renderer": "vite build",
        "build:dev:electron": "bun ./esbuild.config.mjs --watch",
        "build": "npm run build:renderer && npm run build:electron",
        "lint": "eslint .",
        "test": "jest",
        "preview": "vite preview",
        "start": "electronmon ./app",
        "electron:vite:build": "concurrently \"cross-env BROWSER=none bun dev\" \"wait-on http://localhost:5173 && bun build:dev:electron\"",
        "electron:dev": "concurrently \"bun electron:vite:build\" \"bun start\"",
        "dist": "npm run build && electron-builder --config electron-builder.config.js -w",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "dependencies": {
        "@types/bun": "^1.2.4",
        "electron-log": "^5.3.0",
        "electron-serve": "^2.1.1",
        "electron-updater": "^6.3.9",
        "electronmon": "^2.0.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-icons": "^5.4.0"
    },
    "devDependencies": {
        "@storybook/addon-essentials": "^8.0.0",
        "@storybook/react": "^8.0.0",
        "@storybook/react-vite": "^8.0.0",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "electron": "^33.3.1",
        "electron-builder": "^25.1.8",
        "eslint": "^9.17.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "globals": "^15.14.0",
        "postcss": "^8.4.49",
        "storybook": "^8.0.0",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.18.2",
        "vite": "^6.0.5",
        "wait-on": "^8.0.2"
    },
    "build": {
        "appId": "com.example",
        "productName": "example",
        "copyright": "Copyright Â© 2021 ${author}",
        "linux": {
            "target": [
                "pacman"
            ],
            "icon": "build/icon.png"
        },
        "win": {
            "icon": "build/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        }
    }
}
